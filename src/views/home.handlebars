<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="/css/style.css">

<h1 class="titulo">Productos</h1>
<h5>Bienvenido {{user.email}}</h5>
<h6>Rol: {{user.role}}</h6>
{{#each products}}

        <div class="d-flex justify-content-around row pt-4 pb-4 row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <div class="col">
              <div class="card h-100">
                <img src="{{this.thumbnail}}" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text">Descripci√≥n: {{this.description}}</p>
                  <p class="card-text">Codigo: {{this.code}}</p>
                  <p class="card-text">Precio: ${{this.price}}.</p>
                  <p class="card-text">Stock: {{this.stock}}</p>
                  <p class="card-text">Status: 
                  {{#if this.status}}
                  <input class="form-check-input" type="checkbox" value="true" checked disabled>
                    {{else}}
                  <input class="form-check-input" type="checkbox" value="true" disabled>
                  {{/if}}
                  </p>
                  <p class="card-text">Categoria: {{this.category}}</p>
                </div>
              </div>
            </div>
        </div>
{{/each}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>