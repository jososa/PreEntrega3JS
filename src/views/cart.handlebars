<div class="container mt-5">
    <h1 class="mb-4">Carrito</h1>

    {{#if result}}
        <div class="card">
            <div class="card-body">
                <p class="card-text"><strong>Cart ID:</strong> {{result._id}}</p>

                <ul class="list-group">
                    {{#each result.products }}
                        <li class="list-group-item">
                            <h3 class="mb-2">Title: {{this.product.title}}</h3>
                            <p class="mb-1">Description: {{this.product.description}}</p>
                            <p class="mb-1">Category: {{this.product.category}}</p>
                            <p class="mb-1">Quantity: {{this.quantity}}</p>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{else}}
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Carrito vac√≠o</h4>
            <p>{{message}}</p>
        </div>
    {{/if}}
</div>